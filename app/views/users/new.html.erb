<%= form_with model: @user do |f| %>
  <%= f.label :name, 'Name:' %>
  <%= f.text_field :name, placeholder: "your user name here" %>
  <br><br>
  <%= f.label :email, 'Email:' %>
  <%= f.email_field :email, placeholder: "example@example.com" %>
  <br><br>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password, placeholder: "enter your password" %>
  <br><br>
  <%= f.submit "Submit" %>
<% end %>
