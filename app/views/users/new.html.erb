<%= form_tag("/users", method: "post") do %>
  <%= label_tag("Name:") %><br><br>
  <%= text_field_tag('user[name]', @user.name) %><br><br>
  <%= label_tag(:email, "Email:") %><br><br>
  <%= email_field_tag('user[email]', @user.email) %><br><br>
   <%= label_tag("Password:") %><br><br>
   <%= password_field_tag('user[password]') %><br><br>
   <%= submit_tag("Submit") %>
<% end %>
